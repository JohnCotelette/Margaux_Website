{% extends 'base.html.twig' %}

{% block title %}Forgot your password ?{% endblock %}

{% block body %}
    <form method="post">
        <h1 class="h3 mb-5 font-weight-normal">Reset your password</h1>

        <div class="mb-5">
            <p class="alert alert-primary" role="alert">
                A link will be sent to you by email.<br>
                By clicking on it, you can change your password.
            </p>

        {% for message in app.flashes("alert") %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes("success") %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        </div>

        <label for="inputEmail">Email</label>
        <input type="email" value="" name="email" id="inputEmail" class="form-control" required="" autofocus="">

        <button class="btn btn-lg btn-primary mt-4" type="submit">
            Send me an email !
        </button>

    </form>
{% endblock %}

